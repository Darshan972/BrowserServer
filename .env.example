# Browser Server Configuration for Ubuntu Server

# Server Domain and Port
DOMAIN=browser.scrapingdog.com
PORT=4000

# Browser Pool Settings
MAX_BROWSERS=100
BROWSER_IDLE_TIMEOUT=300000

# Chromium Path - VERIFY THIS ON YOUR UBUNTU SERVER!
# Run: which chromium-browser
CHROMIUM_PATH=/usr/bin/chromium-browser

# API Security
API_KEY=key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_CREATE_MAX=100
RATE_LIMIT_BULK_MAX=20

# WebSocket Rate Limiting
WSS_RATE_LIMIT_WINDOW_MS=60000
WSS_RATE_LIMIT_MAX_CONNECTIONS=100
WSS_RATE_LIMIT_MAX_MESSAGES=5000

# MongoDB (if needed)
MONGO_URL=mongodb://localhost:27017

# Environment
NODE_ENV=production
